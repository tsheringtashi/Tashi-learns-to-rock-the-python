getter_setter

class Employee:
    

    def __init__(self, first, last):
        self.first = first
        self.last = last
        self.email = first +'.'+'last'+'@thimphutechpark.bt'


    def fullname(self):
        return '{} {}'.format(self.first, self.last)



emp_1 = Employee('Sonam', 'Chophel')


print(emp_1.first)

print(emp_1.email)

print(emp_1.fullname)